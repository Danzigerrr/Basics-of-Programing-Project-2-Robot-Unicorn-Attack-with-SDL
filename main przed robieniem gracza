		int losowa_odleglosc = 0;
		srand((unsigned)time(0));
		losowa_odleglosc = (rand() % LOSOWANIE_ODLEGLOSCI);

#endif
		while (lifes > 0) {
			if (!game_over) {
				if (!explosion_animation) {
					while (SDL_PollEvent(&event)) {
						switch (event.type) {
						case SDL_KEYDOWN:
							if (event.key.keysym.sym == SDLK_ESCAPE) quit = 1; //wyjscie z programu

							else if (event.key.keysym.sym == SDLK_d) { // zmiana ustawien sterowania
								if (control_with_arrows) control_with_arrows = false;
								else control_with_arrows = true;

							}

							else if (control_with_arrows) {
								if (event.key.keysym.sym == SDLK_UP) {//skok
									if (IsJumping == 0) {
										IsJumping = 1;
										klatka_skok = 0;
									}
									else if (IsJumping == 1 && IsFalling == 1) {
										IsJumping = 2;
										klatka_skok = 0;
									}
								}
								else if (event.key.keysym.sym == SDLK_RIGHT) //zryw
								{
									if (zryw == 5) {
										zryw = 2;

										if (jump > 0) {
											IsJumping = 1;
											IsFalling = 1;
										}
										if (jump == 0) {
											IsJumping = 0;
											IsFalling = 0;
										}

									}
								}
							}

							else if (!control_with_arrows) {
								if (event.key.keysym.sym == SDLK_z) { //skok
									if (IsJumping == 0) IsJumping = 1;
									else if (IsJumping == 1 && IsFalling == 1) IsJumping = 2;
								}

								else if (event.key.keysym.sym == SDLK_x) //zryw
								{
									if (zryw == 5) {
										zryw = 2;

										if (jump > 0) {
											IsJumping = 1;
											IsFalling = 1;
										}
										if (jump == 0) {
											IsJumping = 0;
											IsFalling = 0;
										}

									}
								}
							}
							break;

						case SDL_KEYUP:
							if (control_with_arrows) {
								if (event.key.keysym.sym == SDLK_UP) { //spadanie po skoku
									IsFalling++;
									if (IsFalling == 3)
										IsFalling = 2;
									if (IsFalling == 1 && jump == 0)
										IsFalling = 0;
									klatka_skok = ilosc_klatek_skok - klatka_skok;
								}
								else if (event.key.keysym.sym == SDLK_RIGHT) {
									zryw = 3; //zryw

								}
							}

							if (!control_with_arrows) {
								if (event.key.keysym.sym == SDLK_z) { //spadanie po skoku
									IsFalling++;
									if (IsFalling == 3)
										IsFalling = 2;
									if (IsFalling == 1 && jump == 0)
										IsFalling = 0;
								}
								else if (event.key.keysym.sym == SDLK_x) {
									zryw = 3; //zryw
								}
							}
							break;
						case SDL_QUIT:
							quit = 1;
							break;
						};
					};

					zmierz_czas(&t1, &delta, &worldTime);


#ifndef tła

					//tlo
					DrawSurface(screen, tlo_tecza, SCREEN_WIDTH / 2, SCREEN_HEIGHT / 2);

					//lifes
					for (int i = 0; i < lifes; i++)
					DrawSurface(screen, ikonka_zycia, i*60 + 40, SCREEN_HEIGHT - 50);

					//czary kwadrat - horse     a obazek to horse pokazany z + 20


					//jednorozec
						/*int v = 20;
						horse.w += v;
						horse.h += v;
						horse.x -= v/ 2;
						horse.y -= v/ 2;
						DrawRectangle(screen, horse.x, horse.y, horse.w, horse.h, zielony, czarny);*/
						/*SDL_BlitSurface(konik, NULL, screen, &horse);*/


							//horse.w -= v;
							//horse.h -= v;
							//horse.x += v/ 2;
							//horse.y += v/ 2;
							///*SDL_BlitSurface(konik, NULL, screen, &horse); */
							//DrawRectangle(screen, horse.x, horse.y, horse.w, horse.h, czerwony, niebieski);


					//zmien sposob prezentacji mapy - malo jasny
					float mapX = -frames + SZEROKOSC_MAPY_BMP / 2;
					//mapa i stalaktyty
					DrawSurface(screen, map, mapX, mapY);


					//pokazuje kolejna czesc mapy
					if (mapX < SCREEN_WIDTH - SZEROKOSC_MAPY_BMP / 2 && mapX > -SZEROKOSC_MAPY_BMP / 2) {
						int diff = SZEROKOSC_MAPY_BMP + mapX;
						DrawSurface(screen, map, diff, mapY);
					}
#endif

					//animacja biegu
					if (IsJumping == 0 && zryw != 2) {

						SDL_BlitSurface(animacja, &animacja_kon[int(klatka)], screen, &horse);
						czas_animacji += delta;
						if (czas_animacji >= 0.15) {
							klatka++;
							czas_animacji = 0;
						}

						if (klatka == klatki_bieg) klatka = 0;

					}

					//zryw i skok
					if (zryw != 0) {
						//zryw = 2 kon jest podczas zrywu --> zryw aktywny
						//zryw = 3 powracanie na pozycje
						//zryw = 4 zryw sie skonczyl - mozliwy dodatkowy skok
						//zryw = 5 kon upadl na ziemie po zakonczeniu zrywu lub dodtakowego skoku, pelna gotowosc do kolejnego zrywu

						if (zryw == 2){
							if (dlugosc_klatek_zrywu < 100){	
								czas_zryw += delta;
								if (czas_zryw >= 0.05) {
									klatka_zryw++;
									czas_zryw = 0;
								}
								if (klatka_zryw == ilosc_klatek_zryw) klatka_zryw = ilosc_klatek_zryw-1;
								SDL_BlitSurface(animacja_zryw, &animacja_zryw_rect[int(klatka_zryw)], screen, &horse);

								dlugosc_klatek_zrywu += ilosc_dodawanych_klatek_w_zrywie;
								dystans += ilosc_dodawanych_klatek_w_zrywie;
								horse.x += ilosc_dodawanych_klatek_w_zrywie;
							}
							else {
								zryw = 3;
								czas_zryw = 0;
							}
						}
						if (zryw == 3) {
							if (dlugosc_klatek_zrywu > 0) {

								czas_zryw += delta;
								if (czas_zryw >= 0.05) {
									klatka_zryw--;
									czas_zryw = 0;
								}
								if (klatka_zryw == -1) klatka_zryw = 0;

								SDL_BlitSurface(animacja_zryw, &animacja_zryw_rect[int(klatka_zryw)], screen, &horse);


								dlugosc_klatek_zrywu -= ilosc_dodawanych_klatek_w_zrywie;
								dystans -= ilosc_dodawanych_klatek_w_zrywie;
								horse.x -= ilosc_dodawanych_klatek_w_zrywie;


							}
							else {
								zryw = 4;
								klatka_zryw = 0;
							}
						}
						if (zryw == 4 || zryw == 5) {


							if (IsJumping != 0) {
								if (IsJumping == 1) {
									if (IsFalling == 1 && jump > 0) { //spadek

										if (jump % 10 == 0 ) {
											wartosc_kamera -= wartosc;
											for (int k = 1; k <= ILOSC_WROZEK; k++) girl[k].y -= wartosc;
											for (int k = 1; k <= ILOSC_PRZESZKOD; k++) gwiazda[k].y -= wartosc;
											for (int k = 1; k <= ILOSC_STALAKTYTOW; k++) stal[k].y -= wartosc;
											for (int k = 1; k <= ILOSC_DZIUR; k++) { hole[k].y -= wartosc; hole_end[k].y -= wartosc; }
											for (int k = 1; k <= ILOSC_DOD_PODLOZA; k++) dodatkowe_podloze[k].y -= wartosc;
											for (int k = 1; k <= ILOSC_DELFINOW; k++) delfiny[k].y -= wartosc;
											mapY -= wartosc;
										}

										(jump)--;
										horse.y++;

										czas_skok += delta;
										if (czas_skok >= 0.05) {
											klatka_skok++;
											czas_skok = 0;
										}
										if (klatka_skok == ilosc_klatek_skok) klatka_skok = ilosc_klatek_skok - 1;
										SDL_BlitSurface(animacja_skok_dol, &animacja_skok_d[int(klatka_skok)], screen, &horse);

										//kamera
										

										if (jump == 0) { //koniec skoku
											IsJumping = 0;
											IsFalling = 0;
											zryw = 5;
											spadl_na_dodatkowe_podloze = 0;
											czas_skok = 0;
											//wartosc_kamera = 0;
										}
									}

									else { //wznoszenie sie
										jump++;
										horse.y--;

										if (jump == MAX_JUMP_HEIGHT / 2) {
											IsFalling = 1;
											czas_skok = 0;
										}

										czas_skok += delta;
										if (czas_skok >= 0.05) {
											klatka_skok++;
											czas_skok = 0;
										}
										if (klatka_skok == ilosc_klatek_skok) klatka_skok = ilosc_klatek_skok - 1;

										SDL_BlitSurface(animacja_skok_gora, &animacja_skok_g[int(klatka_skok)], screen, &horse);

										//kamera
										if (jump % 10 == 0) {
											wartosc_kamera += wartosc;
											for (int k = 1; k <= ILOSC_WROZEK; k++) girl[k].y += wartosc;
											for (int k = 1; k <= ILOSC_PRZESZKOD; k++) gwiazda[k].y += wartosc;
											for (int k = 1; k <= ILOSC_STALAKTYTOW; k++) stal[k].y += wartosc;
											for (int k = 1; k <= ILOSC_DZIUR; k++){ hole[k].y += wartosc; hole_end[k].y += wartosc; }
											for (int k = 1; k <= ILOSC_DOD_PODLOZA; k++) dodatkowe_podloze[k].y += wartosc;
											for (int k = 1; k <= ILOSC_DELFINOW; k++) delfiny[k].y += wartosc;
											mapY += wartosc;
										}
									}

								}

								if (IsJumping == 2) {

									if (IsFalling == 2 && jump > 0) { //spadek

										if (jump % 10 == 0) {
											wartosc_kamera -= wartosc;
											for (int k = 1; k <= ILOSC_WROZEK; k++) girl[k].y -= wartosc;
											for (int k = 1; k <= ILOSC_PRZESZKOD; k++) gwiazda[k].y -= wartosc;
											for (int k = 1; k <= ILOSC_STALAKTYTOW; k++) stal[k].y -= wartosc;
											for (int k = 1; k <= ILOSC_DZIUR; k++) { hole[k].y -= wartosc; hole_end[k].y -= wartosc; }
											for (int k = 1; k <= ILOSC_DOD_PODLOZA; k++) dodatkowe_podloze[k].y -= wartosc;
											for (int k = 1; k <= ILOSC_DELFINOW; k++) delfiny[k].y -= wartosc;
											mapY -= wartosc;
										}

										(jump)--;
										horse.y++;


										czas_skok += delta;
										if (czas_skok >= 0.05) {
											klatka_skok++;
											czas_skok = 0;
										}
										if (klatka_skok == ilosc_klatek_skok) klatka_skok = ilosc_klatek_skok - 1;
										SDL_BlitSurface(animacja_skok_dol, &animacja_skok_d[int(klatka_skok)], screen, &horse);

										if (jump == 0) { //koniec skoku
											IsJumping = 0;
											IsFalling = 0;
											zryw = 5;
											spadl_na_dodatkowe_podloze = 0;
											czas_skok = 0;
											//wartosc_kamera = 0;
										}
									}

									else { //wznoszenie sie
										(jump)++;
										horse.y--;
										if (jump == MAX_JUMP_HEIGHT) IsFalling = 2;

										czas_skok += delta;
										if (czas_skok >= 0.05) {
											klatka_skok++;
											czas_skok = 0;
										}
										if (klatka_skok == ilosc_klatek_skok) klatka_skok = ilosc_klatek_skok - 1;
										SDL_BlitSurface(animacja_skok_gora, &animacja_skok_g[int(klatka_skok)], screen, &horse);
										//kamera
										if (jump % 10 == 0) {
											wartosc_kamera += wartosc;
											for (int k = 1; k <= ILOSC_WROZEK; k++) girl[k].y += wartosc;
											for (int k = 1; k <= ILOSC_PRZESZKOD; k++) gwiazda[k].y += wartosc;
											for (int k = 1; k <= ILOSC_STALAKTYTOW; k++) stal[k].y += wartosc;
											for (int k = 1; k <= ILOSC_DZIUR; k++) { hole[k].y += wartosc; hole_end[k].y += wartosc; }
											for (int k = 1; k <= ILOSC_DOD_PODLOZA; k++) dodatkowe_podloze[k].y += wartosc;
											for (int k = 1; k <= ILOSC_DELFINOW; k++) delfiny[k].y += wartosc;
											mapY += wartosc;
										}
										
									}
								}
							}
							else zryw = 5;
						}
						//zablokowanie skoku wychodzacego po za gre
						if (horse.y == 10) {
							IsJumping = 2;
							IsFalling = 2;
						}
					}
					//printf("jump: %d ", jump);
					//printf("kamera: %d \n", wartosc_kamera);
#ifdef przeszkody
					//przeszkody
					for (int k = 1; k <= ILOSC_PRZESZKOD; k++) {
						int start_showing = k * ODL_POM_PRZESZKODAMI;
						int end_showing = k * ODL_POM_PRZESZKODAMI + SCREEN_WIDTH + 2 * gwiazda[k].w + losowa_odleglosc;


						if (start_showing < frames && frames < end_showing) {

							if (przeszkoda_zotała_rozbita[k] == 0) {
								gwiazda[k].x = start_showing + SCREEN_WIDTH - frames + losowa_odleglosc;

								if (SDL_HasIntersection(&horse, &gwiazda[k])) {
									if (zryw == 2) {
										przeszkoda_zotała_rozbita[k] = 1;
										kolejna_gwiazda_rozbita++;
										bonusowe_punkty_gwiazda = 100 * kolejna_gwiazda_rozbita;
										punkty += bonusowe_punkty_gwiazda;
										printf("gwiazda rozbita \n");
										gwiazda[k].x = SCREEN_WIDTH;
										czas_bonusowy_napis = 0;
									}
									else {
										printf("zderzenie z gwiazda \n");
										explosion_animation = true;
										czas_animacji = 0;
									}
								}

								if (gwiazda[k].x <= 0) {
									kolejna_gwiazda_rozbita = 0;
									printf("ominieta gwiazda\n");
								}

								SDL_BlitSurface(star, NULL, screen, &gwiazda[k]);
								//DrawRectangle(screen, gwiazda[k].x, gwiazda[k].y, gwiazda[k].w, gwiazda[k].h, czerwony, niebieski);
							}
						}

					}

#endif
					//animacja wybuchu gwiazdy
					if (bonusowe_punkty_gwiazda != 0 || wybuch_gwiazdy == 1) {
						wybuch_gwiazdy = 1;
						czas_blysk_gwiazdy += delta;
						if (czas_blysk_gwiazdy >= 0.1) {
							klatka_gwiazda++;
							czas_blysk_gwiazdy = 0;
						}

						if (klatka_gwiazda == ilosc_klatek_wybuch) {
							wybuch_gwiazdy = 0;
							klatka_gwiazda = 0;
						}

						SDL_BlitSurface(gwiazdeczka, &animacja_gwiazdeczka_rect[int(klatka_gwiazda)], screen, &horse);

					}


#ifdef	stalaktyty
					//stalaktyty
					for (int k = 1; k <= ILOSC_STALAKTYTOW; k++) {
						int start_showing = k * ODL_POM_STALAKTYTAMI;
						int end_showing = k * ODL_POM_STALAKTYTAMI + SCREEN_WIDTH + 2 * stal[k].w;

						if (start_showing < frames && frames < end_showing) {
							
							if (SDL_HasIntersection(&horse, &stal[k])) {
								explosion_animation = true;
								czas_animacji = 0;
								printf("STALAKTYT \n");
							}

							stal[k].x = start_showing + SCREEN_WIDTH - frames;

							SDL_BlitSurface(stalaktyt, NULL, screen, &stal[k]);
							DrawRectangle(screen, stal[k].x, stal[k].y, stal[k].w, stal[k].h, czerwony, niebieski);
						}
					}
#endif
#ifdef	podl
					//dodatkowe podloze
					for (int k = 1; k <= ILOSC_DOD_PODLOZA; k++) {

						//spadl_na_dodatkowe_podloze
						// 0 jest przed obszarem dod podloza
						// 1 aktualnie przebywa na dod podlozu
						// 2 zaczal spadac z dodatkowego podloza

						int start_showing = k * ODL_POM_DOD_PODLOZAMI;
						int end_showing = k * ODL_POM_DOD_PODLOZAMI + SCREEN_WIDTH + SZEROKOSC_DOD_PODLOZA;


						if (start_showing < frames && frames < end_showing) {

							dodatkowe_podloze[k].x = start_showing + SCREEN_WIDTH - frames;
							SDL_BlitSurface(ziemniaki, NULL, screen, &dodatkowe_podloze[k]);

							DrawRectangle(screen, dodatkowe_podloze[k].x, dodatkowe_podloze[k].y, dodatkowe_podloze[k].w, dodatkowe_podloze[k].h, zielony, niebieski);
							int granica = WYSOKOSC_DODATKOWEGO_PODLOZA - 1 + (k - 1) * ROZNICA_POZIOMOW_MIEDZY_DOD_PODLOZAMI - wartosc_kamera;
							printf("%d %d %d \n", k, jump, granica);
							if (spadl_na_dodatkowe_podloze == 0 && SDL_HasIntersection(&horse, &dodatkowe_podloze[k])) {
								if (jump < granica) {
									printf("zderzenie czolowe dodatkowe podloze \n");
									explosion_animation = true;
									czas_animacji = 0;
								}

								else {
									jump = 0;
									IsFalling = 0;
									IsJumping = 0;
									spadl_na_dodatkowe_podloze = 1;
								}
							}

							if (end_showing - frames <= 2 * mnoznik_przyspieszenia) {

								if (spadl_na_dodatkowe_podloze == 1) jump += WYSOKOSC_DODATKOWEGO_PODLOZA + (k - 1) * ROZNICA_POZIOMOW_MIEDZY_DOD_PODLOZAMI;

								spadl_na_dodatkowe_podloze = 2;
							}
						}
					}

					if (spadl_na_dodatkowe_podloze == 2 && jump >= 0 && IsJumping == 0) {
						if (jump == 0) spadl_na_dodatkowe_podloze = 0;
						else {
							jump--;
							horse.y++;
						}
					}
#endif
#ifndef	dziura
				//dziury w podlozu
					

					for (int k = 1; k <= ILOSC_DZIUR; k++) {
						int start_showing = k * ODL_POM_DZIURAMI;
						int end_showing = k * ODL_POM_DZIURAMI + SCREEN_WIDTH + SZEROKOSC_DZIURY;


						if (start_showing < frames && frames < end_showing) {

							hole[k].x = start_showing + SCREEN_WIDTH - frames;

							if (frames < end_showing) {

								if (SDL_HasIntersection(&horse, &hole[k]) && IsJumping == 0) {
									
									//kamera
									if (jump % 10 == 0) {
										wartosc_kamera -= wartosc;
										for (int k = 1; k <= ILOSC_WROZEK; k++) girl[k].y -= wartosc;
										for (int k = 1; k <= ILOSC_PRZESZKOD; k++) gwiazda[k].y -= wartosc;
										for (int k = 1; k <= ILOSC_STALAKTYTOW; k++) stal[k].y -= wartosc;
										for (int k = 1; k <= ILOSC_DZIUR; k++) { hole[k].y -= wartosc; hole_end[k].y -= wartosc; }
										for (int k = 1; k <= ILOSC_DOD_PODLOZA; k++) dodatkowe_podloze[k].y -= wartosc;
										for (int k = 1; k <= ILOSC_DELFINOW; k++) delfiny[k].y -= wartosc;
										mapY -= wartosc;
									}

									horse.y++;
									jump--;
								}
								//DrawRectangle(screen, hole[k].x, hole[k].y, hole[k].w, hole[k].h, niebieski, czerwony);
							}

							SDL_BlitSurface(dziuraa, NULL, screen, &hole[k]);

							
						}

						// zderzenie z poczatkiem terenu za dziura
						if (end_showing - SZEROKOSC_DZIURY < frames && frames < end_showing + SZEROKOSC_DZIURY) {
							hole_end[k].x = start_showing + SCREEN_WIDTH - frames + SZEROKOSC_DZIURY + 20;

							if (SDL_HasIntersection(&horse, &hole_end[k])) {
								explosion_animation = true;
								czas_animacji = 0;
								printf("koniec dziury\n");
							}
							DrawRectangle(screen, hole_end[k].x, hole_end[k].y, hole_end[k].w, hole_end[k].h, niebieski, zielony);
						}



						//spadniecie na dolny koniec ekranu
						if (jump == -160) {
							game_over = true;
							lifes--;
							printf("dno \n");
						}

					}
					
#endif
#ifdef	wrozki
					//wrozki
					for (int k = 1; k <= ILOSC_WROZEK; k++) {
						int start_showing = k * ODL_POM_WROZKAMI;
						int end_showing = k * ODL_POM_WROZKAMI + SCREEN_WIDTH + 2 * girl[k].w + losowa_odleglosc;

						if (start_showing < frames && frames < end_showing) {

							if (wrozka_zostala_zebrana[k] == 0) {
								girl[k].x = start_showing + SCREEN_WIDTH - frames + losowa_odleglosc;

								if (SDL_HasIntersection(&horse, &girl[k])) { // zebranie wrozki
									wrozka_zostala_zebrana[k] = 1;
									kolejna_wrozka_zebrana++;
									bonusowe_punkty_wrozka = 10 * kolejna_wrozka_zebrana;
									punkty += bonusowe_punkty_wrozka;
									printf("wrozka zdobyta %d \n", k);
									girl[k].x = SCREEN_WIDTH;
									czas_bonusowy_napis = 0;
								}

									if (girl_moved < max_girl_move) {
										girl_moved++;
										if (girl_moved % 2) {
											if (girl_moved < max_girl_move / 2)  girl[k].y--;
											else girl[k].y++;
										}
									}

									else {
										girl_moved = 0;
										srand((unsigned)time(0));
										max_girl_move = 100 + (rand() % 100);
									}

								if (girl[k].y <= 50) girl_moved = max_girl_move / 2; // ograniczenie pionowych ruchow wrozki
								else if (girl[k].y >= 300) girl_moved = 0;

								if (girl[k].x <= 0) {
									kolejna_wrozka_zebrana = 0;
									printf("ominieta wrozka %d \n", k);
								}

								SDL_BlitSurface(wrozki, NULL, screen, &girl[k]);
								DrawRectangle(screen, girl[k].x, girl[k].y, girl[k].w, girl[k].h, czerwony, niebieski);
							}
						}
					}
#endif
#ifdef delfiny
					for(int k=1;k<=ILOSC_DELFINOW; k++)
						if (punkty > k * ILOSC_PUNKTOW_NA_DELFINA) {

							delfiny[k].x++;

							if(delfiny[k].x<SCREEN_WIDTH/2) delfiny[k].y--;
							else delfiny[k].y++;

							if (delfiny[k].x == SCREEN_WIDTH) {
								delfiny[k].x = 0;
								delfiny[k].y = SCREEN_HEIGHT;
								klatka_delfin = 0;
								czas_delfin = 0;
							}

							SDL_BlitSurface(animacja_delfin, &animacja_delfin_rect[int(klatka_delfin)], screen, &delfiny[k]);
							czas_delfin += delta;
							if (czas_delfin >= 0.35) {
								klatka_delfin++;
								czas_delfin = 0;
							}

							if (klatka_delfin == ilosc_klatek_delfin) klatka_delfin = ilosc_klatek_delfin-1;
						}

#endif

					// tekst informacyjny
					DrawRectangle(screen, 4, 4, SCREEN_WIDTH - 8, 36, czerwony, niebieski);
					sprintf(text, "Czas trwania = %.1lf s", worldTime);
					DrawString(screen, screen->w / 2 - strlen(text) * 8 / 2, 10, text, charset);
					sprintf(text, "Punkty: %d", punkty);
					DrawString(screen, screen->w / 2 - strlen(text) * 8 / 2, 26, text, charset);

					//prezentacja punktow bonusowych
					if (bonusowe_punkty_gwiazda != 0 || bonusowe_punkty_wrozka != 0){
						int bonusowe_punkty;
						if (bonusowe_punkty_gwiazda != 0) bonusowe_punkty = bonusowe_punkty_gwiazda;
						else bonusowe_punkty = bonusowe_punkty_wrozka;

						czas_bonusowy_napis += delta;

						if (czas_bonusowy_napis >= 1) {
							czas_bonusowy_napis = 0;
							bonusowe_punkty_gwiazda = 0;
							bonusowe_punkty_wrozka = 0;
						}
						else {
							sprintf(text, "+%d", bonusowe_punkty);
							DrawString(screen, horse.x / 2 + horse.w/2 , horse.y-10, text, charset);
						}
					}

					DrawRectangle(screen, horse.x, horse.y, horse.w, horse.h, czerwony, niebieski);
					
					frames += mnoznik_przyspieszenia;
					dystans += mnoznik_przyspieszenia;

					if (frames % 200 == 0) punkty += 10;
				}
				else{
				
					SDL_BlitSurface(animacja_wybuch, &animacja_wybuch_rect[int(klatka_wybuch)], screen, &horse);
					czas_animacji += delta;
					if (czas_animacji >= 0.2) {
						klatka_wybuch++;
						czas_animacji = 0;
					}
					if (klatka_wybuch == ilosc_klatek_wybuch) {
						explosion_animation = false;
						klatka_wybuch = 0;
						czas_animacji = 0;

						game_over = true;
						lifes--;
					}
				}

				update_the_screen(screen, scrtex, renderer);
				//rozszerzanie mapy
				if (frames > SZEROKOSC_MAPY_BMP) {
					frames = 0;
					mnoznik_przyspieszenia += 1;
					ilosc_dodawanych_klatek_w_zrywie += mnoznik_przyspieszenia;

					for (int k = 1; k <= ILOSC_PRZESZKOD; k++) 
						przeszkoda_zotała_rozbita[k] = 0;

					for (int k = 1; k <= ILOSC_WROZEK; k++) 
						wrozka_zostala_zebrana[k] = 0;

					srand((unsigned)time(0));
					losowa_odleglosc = (rand() % LOSOWANIE_ODLEGLOSCI);

					
				}


				if (quit == 1) {
					zwolnienie_powierzchni(screen, scrtex, window, renderer);
					return 0;
				}
			}
			else {
				while (SDL_PollEvent(&event)) {
					switch (event.type) {
					case SDL_KEYDOWN:
						//wyjscie z programu
						if (event.key.keysym.sym == SDLK_ESCAPE) quit = 1; 

						//nowa gra
						else if (event.key.keysym.sym == SDLK_n) {
							game_over = false;
							frames = 0;
							jump = 0;
							
							mnoznik_przyspieszenia = 1;
							IsJumping = 0;
							IsFalling = 0;
							jump = 0;
							
							dystans = 0;

							
							kolejna_gwiazda_rozbita = 0;
							kolejna_wrozka_zebrana = 0;


							zryw = 5;
							dlugosc_klatek_zrywu = 0;
							ilosc_dodawanych_klatek_w_zrywie = mnoznik_przyspieszenia;


							punkty = 0;

							
							horse.x = SZEROKOSC_KONIA / 2 - 35;
							horse.y = SURFACE_HEIGHT - SZEROKOSC_KONIA / 2 - 25;

							srand((unsigned)time(0));
							losowa_odleglosc = (rand() % LOSOWANIE_ODLEGLOSCI);
							worldTime = 0;
						}
					break;

					case SDL_QUIT:
						quit = 1;
						begin = 1;
					break;

					};
				};

				DrawSurface(screen, click_to_play, SCREEN_WIDTH / 2, SCREEN_HEIGHT / 2);

				DrawRectangle(screen, 4, 4, SCREEN_WIDTH - 8, 36, czerwony, niebieski);
				sprintf(text, "Punkty: %d", punkty); 
				DrawString(screen, screen->w / 2 - strlen(text) * 8 / 2, 10, text, charset);
				sprintf(text, "Pozostalych szans na spelnienie marzen: %d.", lifes);
				DrawString(screen, screen->w / 2 - strlen(text) * 8 / 2, 26, text, charset);


				update_the_screen(screen, scrtex, renderer);

				if (quit == 1) {
					zwolnienie_powierzchni(screen, scrtex, window, renderer);
					return 0;
				}

			}	
		}

		////ilosc zyc ==0 --> przejdz do menu glownego
		begin = 0;

	}

}
